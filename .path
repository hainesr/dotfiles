# Keep the user's private bin the last of the prepended paths.
prepend=(/opt/software/eclipse "$HOME/bin")
append=()

# Add paths to the front of PATH, if they exist.
for path in ${prepend[@]}; do
  if [ -d "$path" ] ; then
    PATH="$path:$PATH"
  fi
done

# Add paths to the end of PATH, if they exist.
for path in ${append[@]}; do
  if [ -d "$path" ] ; then
    PATH="$PATH:$path"
  fi
done

unset path prepend append

export PATH
